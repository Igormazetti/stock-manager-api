// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            String   @id @default(uuid())
  title         String   @db.VarChar(255)
  code          String?  @db.VarChar(255)
  value         Float
  originalValue Float    @default(0)
  description   String
  quantity      Int
  companyId     String
  imgUrl        String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Company Company           @relation(fields: [companyId], references: [id])
  sales   Sale[]
  Sales   ProductsOnSales[]

  @@index([companyId])
  @@index([companyId, quantity])
}

model Company {
  id            String   @id @default(uuid())
  name          String   @unique @db.VarChar(255)
  email         String   @unique
  valid         Boolean  @default(true)
  password      String   @db.VarChar(255)
  logoUrl       String?  @db.Text
  cnpj          String?
  address       String?
  phone         String?
  cep           String?
  city          String?
  state         String?
  defaultRoleId String?

  DefaultRole   Role?          @relation("CompanyDefaultRole", fields: [defaultRoleId], references: [id])
  product       Product[]
  sales         Sale[]
  clients       Client[]
  notifications Notification[]
  employees     Employee[]
  customRoles   Role[]         @relation("CompanyCustomRoles")
}

model Sale {
  id            String    @id @default(uuid())
  clientId      String
  company_id    String
  observation   String?   @db.Text
  paid          Boolean   @default(false)
  paymentTime   DateTime?
  products      Product[]
  createdAt     DateTime  @default(now())

  Company  Company           @relation(fields: [company_id], references: [id])
  Client   Client            @relation(fields: [clientId], references: [id])
  Products ProductsOnSales[]

  @@index([company_id, createdAt(sort: Desc)])
  @@index([company_id, paid])
  @@index([clientId])
}

model ProductsOnSales {
  id               String  @id @unique @default(uuid())
  product_id       String
  sale_id          String
  quantity_sold    Int     @default(1)
  productSaleValue Float   @default(0)

  Product Product @relation(fields: [product_id], references: [id])
  Sale    Sale    @relation(fields: [sale_id], references: [id])

  @@index([sale_id])
  @@index([product_id])
  @@map("productsOnSales")
}

model Employee {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  active    Boolean  @default(true)
  companyId String
  roleId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Company Company @relation(fields: [companyId], references: [id])
  Role    Role    @relation(fields: [roleId], references: [id])
}

model Permission {
  id          Int    @id @default(autoincrement())
  permission  String @unique
  description String

  roles RolePermission[]
}

model Role {
  id          String   @id @default(uuid())
  name        String
  description String?
  companyId   String?
  createdAt   DateTime @default(now())

  Company     Company?         @relation("CompanyCustomRoles", fields: [companyId], references: [id])
  permissions RolePermission[]
  employees   Employee[]
  companies   Company[]        @relation("CompanyDefaultRole")

  @@unique([name, companyId])
}

model RolePermission {
  roleId       String
  permissionId Int

  Role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  Permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
}

model Client {
  id           String   @id @default(uuid())
  name         String
  email        String?
  address      String   @db.Text
  observations String?  @db.Text
  companyId    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  Company Company @relation(fields: [companyId], references: [id])
  Sales   Sale[]

  @@index([companyId, createdAt(sort: Desc)])
}

model Notification {
  id          String   @id @default(uuid())
  companyId   String
  entity      String   @db.VarChar(50)
  description String   @db.Text
  productName String?  @db.VarChar(255)
  readed        Boolean  @default(false)
  createdAt   DateTime @default(now())

  Company Company @relation(fields: [companyId], references: [id])

  @@index([companyId, createdAt(sort: Desc)])
}
