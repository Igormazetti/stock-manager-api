{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "typeRoots": [
      "./node_modules/@types",
      "./enviroment.d.ts",
      "./src/@types/*.d.ts"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
